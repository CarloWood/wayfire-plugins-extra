<?xml version="1.0"?>
<wayfire>
	<plugin name="background-view">
	<_short>Background View</_short>
	<category>Desktop</category>
	<option name="command" type="string">
		<_short>Command</_short>
		<_long>Command to run. Must also set app_id to match for plugin to affect view.</_long>
		<default>mpv --loop=inf</default>
	</option>
	<option name="file" type="string">
		<_short>File (optional)</_short>
		<_long>Appended to command.</_long>
		<hint>file</hint>
		<default></default>
	</option>
	<option name="app_id" type="string">
		<_short>Application Identifier</_short>
		<_long>Must match command application identifier.</_long>
		<default>mpv</default>
	</option>
	<option name="inhibit_input" type="bool">
		<_short>Inhibit Input</_short>
		<_long>Discards any input that would normally be forwarded to the background layer.</_long>
		<default>true</default>
	</option>
	</plugin>
</wayfire>
